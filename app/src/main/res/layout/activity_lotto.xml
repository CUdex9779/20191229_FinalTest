<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".LottoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이번주 당첨번호"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/lottoNumTxt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>

        <TextView
            android:id="@+id/lottoNumTxt06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="\?"/>
        
        

    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="내가 구매하는 로또 번호"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/myNumTxt01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="15"/>

        <TextView
            android:id="@+id/myNumTxt02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="23"/>

        <TextView
            android:id="@+id/myNumTxt03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="33"/>

        <TextView
            android:id="@+id/myNumTxt04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="7"/>

        <TextView
            android:id="@+id/myNumTxt05"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="38"/>

        <TextView
            android:id="@+id/myNumTxt06"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:layout_marginLeft="15dp"
            android:text="22"/>



    </LinearLayout>

    <Button
        android:id="@+id/buyOneLottoBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="로또 한장 구매하기"/>





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사용 금액 : "/>

        <TextView
            android:id="@+id/totalUseMoneyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0원"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="당첨 금액 : "/>

        <TextView
            android:id="@+id/totalWinMoneyTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0원"/>


    </LinearLayout>



</LinearLayout>